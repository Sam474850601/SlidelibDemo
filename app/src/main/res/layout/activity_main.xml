<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.yoyonewbie.android.lib.swipefreshlib.SwipeItemDisappearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:padding="3px"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF0000"
            android:textColor="#ffffff"
            android:padding="10px"
            android:text="Hello World!" />

    </com.yoyonewbie.android.lib.swipefreshlib.SwipeItemDisappearLayout>
    <com.yoyonewbie.android.lib.swipefreshlib.SwipeHideOrShowHeaderLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:id="@+id/swipeHideOrShowHeaderLayout"
        app:suspendedArea="@+id/suspendedView"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100000"
                android:textSize="20px"
                android:background="#101010"
                android:textColor="#ffffff"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100000"
                android:textSize="20px"
                android:background="#101010"
                android:textColor="#ffffff"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100000"
                android:textSize="20px"
                android:background="#101010"
                android:textColor="#ffffff"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100000"
                android:textSize="20px"
                android:background="#101010"
                android:textColor="#ffffff"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="100px"
                android:text="你好"
                android:textSize="20px"
                android:background="#101010"
                android:textColor="#ffffff"
                android:id="@+id/suspendedView"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="100px"
            android:text="你好"
            android:textSize="20px"
            android:background="#FF1010"
            android:textColor="#ffffff"
            />
    </com.yoyonewbie.android.lib.swipefreshlib.SwipeHideOrShowHeaderLayout>
</LinearLayout>
